doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Node Authentication
    link(rel='stylesheet', type="text/css" href='css/bootstrap.min.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900&display=swap&subset=cyrillic', rel='stylesheet')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
    link(rel='stylesheet', type="text/css" href='css/custom.css')
  body
    .container
      nav.navbar.navbar-light
        a.navbar-brand(href='/') Tasks App
        div
          if (user)
            span Сотрудник: 
            a(href='/profile')
              span.mr-3.badge.badge-secondary 
                = user.local.email
            a.btn.btn-outline-dark(href='/logout') Выйти
          else
            a.btn.btn-outline-dark(href='/login') Войти


    block content
